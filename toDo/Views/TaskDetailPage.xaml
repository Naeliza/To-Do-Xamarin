<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="toDo.Views.TaskDetailPage">
    <StackLayout>
        <Entry x:Name="nameEntry" Placeholder="Nombre de la tarea" />
        <Entry x:Name="descriptionEntry" Placeholder="Descripción" VerticalOptions="FillAndExpand" />
        <Button Text="Guardar" Clicked="SaveButton_Clicked" />
        <Button Text="Eliminar" Clicked="DeleteButton_Clicked" />
    </StackLayout>
</ContentPage>
